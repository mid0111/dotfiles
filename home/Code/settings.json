// Place your settings in this file to overwrite the default settings
{
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "boundary",
  "eslint.autoFixOnSave": true,
  "files.associations": {
    "*.ejs": "html"
  },
  "html.format.indentInnerHtml": true,
  "window.zoomLevel": -1,
  "beautify.language": {
    "js": {
      "type": [
        "javascript",
        "json"
      ],
      "filename": [
        ".jshintrc",
        ".jsbeautify"
      ]
    },
    "css": [
      "css",
      "scss"
    ],
    "html": [
      "htm",
      "html",
      "ejs"
    ]
  }
}